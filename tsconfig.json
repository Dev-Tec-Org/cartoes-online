{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "declaration": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react-jsx", // Use "react-jsx" para projetos React
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true, 
    "incremental": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/cartoes/marcos-rodrigues/*tsx"],
  "exclude": ["node_modules"],
  "base":"/cartoes-online"
}